<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dateien Hochladen"
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="Server-URL"
                   FontSize="20"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   Margin="0,0,0,10"/>
        <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
            <!-- Text mittig -->
            <TextBlock x:Name="UrlBlock"
               FontSize="14"
               Foreground="DarkBlue"
               TextWrapping="Wrap"
               TextAlignment="Center"/>

            <!-- Copy Button unter dem Text -->
            <Button Content="Kopieren"
            Width="80"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Click="CopyButton_Click"/>
        </StackPanel>



        <Border BorderBrush="Black" BorderThickness="1" Padding="10">
            <Image x:Name="QrImage" Width="250" Height="250"/>
        </Border>
    </StackPanel>
</Window>
